<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    android:padding="20dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            >

            <TextView
                android:id="@+id/state_list_TXT_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:maxEms="8"
                android:singleLine="false"
                android:text="rywuryeiwutyigdgdfgfhgfgffgsdff"
                android:textSize="16sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/state_list_TXT_native_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:maxEms="8"
                android:singleLine="false"
                android:text="rywuryeiwutyiuewytiewuti"
                android:layout_marginTop="7dp"
                android:textColor="#656565"
                />
            <TextView
                android:id="@+id/state_list_TXT_capital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:maxEms="8"
                android:singleLine="false"
                android:text="rywuryeiwutyiuewytiewuti"
                android:layout_marginTop="7dp"
                android:textColor="#AEAEAE"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="100dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                >
                <ImageView
                    android:id="@+id/state_list_IMG_flag"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_launcher_background"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </RelativeLayout>








</androidx.cardview.widget.CardView>